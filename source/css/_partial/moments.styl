.moments {
  margin-top: 30px;
}

.moment {
	position: relative;
	display: flex;
	width: 100%;
	height: 100%;
	padding-bottom: 15px;
	margin-top: 20px;
}

.moment::before {
	content: ' ';
	position: absolute;
	bottom: 0px;
	left: 0;
	height: 3px;
	width: 100%;
	background-color: #f3f3f3;
}

.moment > a {
  text-decoration: none;
  background-image: none;
}

.moment > a:hover {
  text-decoration: none;
  background-image: none;
}

.avatar {
    width: 45px;
    height: 45px;
    margin-top: 5px;
    border-radius: 5px;
    overflow: hidden;
    display: block;
}

.avatar::before {
    content: attr(value);
    display: flex;
    width: 100%;
    height: 100%;
    /* background-color: rgb(255, 192, 117); */
    background-color: #ff536b;
    text-transform: uppercase;
    line-height: 45px;
    letter-spacing: 45px;
    text-indent: 45px;
    justify-content: center;
    text-align: center;
    line-break: anywhere;
	  color: #fff;
    font-size: 1.5rem;
}

.moment-content {
	margin-left: 15px;
        max-width: 100%;
}

.moment-title {
	font-weight: bold;
}

.moment-info {
	font-size: 1rem;
	margin-top: 2px;
	opacity: .7;
}

.moment-summary {
	margin-top: 8px;
}

.moment:last-child {
  margin-bottom: 50px;
}

@media (max-width: 540px) {
  .moment-content {
    margin-left: 0;
    margin-right: 0;
  }

  .moment-info {
    display: flex;
    flex-direction: column;
  }

  .avatar {
    display: none;
  }
}
