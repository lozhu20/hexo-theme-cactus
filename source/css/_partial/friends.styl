.link-container {
  display: grid;
  grid-template-columns: 50% 50%
  margin-top: 20px;
}

.link-item {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20px;
  margin-right: 30px;
}

.link-item img {
  width: 45px !important;
  height: 45px !important;
}

.link-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 10px;
  overflow: hidden;
  white-space: nowrap;
}

.blog-name {
  font-size: .95rem;
  font-weight: bold;
}

.blog-desc {
  margin-top: 1px;
}

@media screen and (max-width: 650px) {
  .link-container {
    grid-template-columns: repeat(1, 1fr);
  }
}
