.post-list
  padding: 0
  margin-bottom: 4rem

  .post-item
    margin-bottom: 8px
    margin-left: 0
    list-style-type: none

    .meta
      display: block
      margin-right: 16px
      min-width: 100px
      color: $color-meta
      font-size: 1rem

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 8px

      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none
  margin-bottom: 4rem

  .project-item
    margin-bottom: 5px
    p
      display: inline
